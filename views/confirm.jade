extends layout
block content
    .row
        input(type="hidden", name="pickupLat", value="#{order.details.pickup.lat}")
        input(type="hidden", name="pickupLng", value="#{order.details.pickup.lng}")
        input(type="hidden", name="pickupEnglish", value="#{order.details.pickup.english}")
        input(type="hidden", name="dropoffLat", value="#{order.details.dropoff.lat}")
        input(type="hidden", name="dropoffLng", value="#{order.details.dropoff.lng}")
        input(type="hidden", name="dropoffEnglish", value="#{order.details.dropoff.english}")
        input(type="hidden", name="taxi", value="{order.taxi}")

        #loader.row
            .large-4.columns
                img(src="/images/loader.gif")
            .large-8.columns
                p Please wait whilst The Cab Finder places the call to the cab finder. Live responses can take up to 2 minutes. Thank you for your patience. 
        #accepted.row
            .large-8.columns
                p Congratulations. You're booking has been confirmed.
        #accepted.row
            .large-8.columns
                p Oh no!. You're booking has been rejected by the taxi company. We're really sorry about this, why not try a different company.
        #details
            h1 Confirmation Page
            p You are being picked up from #{order.details.pickup.english}
            p You are being dropped off at #{order.details.dropoff.english}

        form
            .row
                .large-12.columns
                    label Your name:
                    input(type="text", placeholder="Name", name="customerName")
                .large-12.columns
                    label Time
                    input#time(type="text", placeholder="ASAP", name="time")
                .large-12.columns
                    label Phone Number
                    input#phoneNumber(type="number", placeholder="07712 345 678", name="phoneNumber")
                .large-12.columns
                    input.button#submitBooking(type="submit")
    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src="/javascripts/jquery.timepicker.js")
    script(type="text/javascript", src="/javascripts/confirm.js")
